<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:background="@drawable/background_login">

    <TextView
        android:id="@+id/hint_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="20dp"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:text="Clicca sull'immagine sottostante per selezionare una foto profilo."
        android:textAlignment="center"/>

    <ProgressBar
        android:id="@+id/imgProgress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_below="@+id/userPic"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/userPic"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_below="@+id/hint_photo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@mipmap/camera_icon"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_input_layout"
        android:layout_width="270dp"
        android:textColorHint="@android:color/darker_gray"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userPic"
        android:layout_marginTop="50dp"
        app:errorEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/nome"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"/>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/name_input_layout"
        android:background="@drawable/rounded_button"
        android:text="@string/salva"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:hapticFeedbackEnabled="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/goHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/saveButton"
        android:background="@drawable/rounded_button_alt"
        android:text="@string/vai_a_home"
        android:ems="10"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:hapticFeedbackEnabled="true"
        android:layout_marginTop="45dp"/>

    <ProgressBar
        android:id="@+id/save_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/saveButton"
        android:visibility="invisible"/>


</RelativeLayout>